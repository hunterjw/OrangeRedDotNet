<Heading Size="HeadingSize.Is2">Settings</Heading>

<Tabs SelectedTab="@ActiveTab.ToString()"
      Pills
      Margin="ThemeService.AppTheme.SpacingRelated"
      Overflow="Overflow.Auto"
      Flex="Flex.NoWrap"
      Class="@(ThemeService.AppTheme.DarkMode ? "horizontal-scroll-dark" : "horizontal-scroll-light")"
      Border="Border.Rounded">
    <Items>
        <Tab Name="@SettingsNavTab.AppSettings.ToString()"
             @onclick="() => NavigateTo(SettingsNavTab.AppSettings)"
             TextOverflow="TextOverflow.NoWrap">
            App Settings
        </Tab>
        <Tab Name="@SettingsNavTab.RedditSettings.ToString()"
             @onclick="() => NavigateTo(SettingsNavTab.RedditSettings)"
             TextOverflow="TextOverflow.NoWrap">
            Reddit Settings
        </Tab>
        <Tab Name="@SettingsNavTab.Friends.ToString()"
             @onclick="() => NavigateTo(SettingsNavTab.Friends)">
            Friends
        </Tab>
        <Tab Name="@SettingsNavTab.Blocked.ToString()"
             @onclick="() => NavigateTo(SettingsNavTab.Blocked)">
            Blocked
        </Tab>
    </Items>
</Tabs>
