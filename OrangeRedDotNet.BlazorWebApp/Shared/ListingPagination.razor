<Pagination Margin="Margin.Is2.FromTop">
    @if (!string.IsNullOrWhiteSpace(Before))
    {
        <PaginationItem>
            <PaginationLink Background="ThemeService.AppTheme.Background"
                        Border="ThemeService.AppTheme.Border"
                        href="@BuildPreviousPageUrl().Result">
                Previous
            </PaginationLink>
        </PaginationItem>
    }
    @if (!string.IsNullOrWhiteSpace(After))
    {
        <PaginationItem>
            <PaginationLink Background="ThemeService.AppTheme.Background"
                        Border="ThemeService.AppTheme.Border"
                        href="@BuildNextPageUrl().Result">
                Next
            </PaginationLink>
        </PaginationItem>
    }
</Pagination>